<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Games Played"
        android:id="@+id/txtPlay"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtxtPlayed"
        android:layout_gravity="right"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Games Won"
        android:id="@+id/txtWon"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtxtWon"
        android:layout_gravity="right"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Games Lost"
        android:id="@+id/txtLost"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtxtLost"
        android:layout_gravity="right"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Average Time"
        android:id="@+id/txtAvTime"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtxtTime"
        android:layout_gravity="right"
        android:text="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnReset"
        android:layout_marginBottom="0dp"/>

</LinearLayout>